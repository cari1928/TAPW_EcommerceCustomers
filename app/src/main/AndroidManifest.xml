        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomerOrdersActivity" />
        <activity android:name=".EditCustomerActivity" />
        <activity
            android:name=".NewCustomerActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Grafica1Activity" />
        <activity android:name=".segunda_ventanaActivity" />
        <activity android:name=".CuponesActivity"></activity>
    </application>

</manifest>